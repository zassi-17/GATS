<div class = "container">
  <h2><%= @review.member.name %>さんのレビュー</h2>
    
    <div class = "row">

    <div class = "col-3 text-center">
      <%= link_to admin_member_path(@member) do %>
        <%= image_tag @member.image, size:"200x200" %>
      <% end %>
    </div>
  
    <div class = "col-9">
      <table>
        <tbody>
          <tr>
            <th>評価：</th>
            <td><%= render "public/reviews/static_rating", review: @review %></td>
          </tr>

          <tr>
            <th>ゲームタイトル：</th>
            <td class = "text-break"><%= @review.title %></td>
          </tr>

          <tr>
            <th>ゲームジャンル：</th>
            <td class = "text-break"><%= @review.genre.name %></td>
          </tr>

          <tr>
            <th>感想：</th>
            <td class = "text-break"><%= @review.body %><td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

    <div class = "text-center mt-4">
        <%= link_to "レビュー削除", admin_review_path(@review), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger px-4" %>
    </div>
  </div>
</div>
