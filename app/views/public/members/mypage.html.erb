<div class = "container">
  <h1>マイページ</h1>

  <h1><%= flash[:alert] %></h1>
  
  <div class = "row mt-3">

  <%= render 'member_detail', member:@member %>
  </div>

  <div class = "mt-3 ml-5">
    <%= link_to "プロフィール編集", edit_public_member_path(@member), class: "btn btn-success px-3" %>
  </div>

  <% @reviews.each do |review| %>
    <%= render 'public/reviews/review_list', review: review %>
  <% end %>

  <div class = "d-flex justify-content-center"> 
    <%= paginate @reviews %>
  </div>
</div>