<h1>プロフィール編集</h1>

<%= form_with model: [:public,@member], local: true do |f| %>

  <%= f.label :image, "アイコン" %>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.label :name, "アカウント名" %>
  <%= f.text_field :name %>

  <div class="field">
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :favorite_game, "好きなゲームソフト" %>
  <%= f.text_field :favorite_game %>

  <%= link_to "退会する", public_member_withdraw_path(@member), method: :patch, data: {confirm: "本当に退会しますか？"} %>

  <%= f.submit "更新する" %>
<% end %>