<div class = "container">
  <% if @model == "Member" %>
    <h2>ユーザー検索結果：キーワード"<%= @key_word %>"</h2>
      <% @members.each do |member| %>
        <div class ="card my-3 p-3 border-0"> 

          <div class ="d-flex">
    
            <div class ="d-flex flex-column align-items-center mr-3">
              <%= image_tag member.image, size: "70x70", class: "rounded-circle" %>
              <div class ="mt-1"><%= member.name %></div>
            </div>

            <div class ="d-flex flex-column flex-grow-1">
      
              <div class ="d-flex justify-content-between align-items-start mb-2">
                <div class ="mr-3">
                  総レビュー数：<%= member.reviews.count %>
                  好きなゲームソフト：<%= member.favorite_game %>
                </div>
        
                <div class ="mt-4">
                  <%= link_to "このユーザーを確認する>>>>>", public_member_path(member) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  <% else %>
    <h2>ゲームソフト検索結果：キーワード"<%= @key_word %>"</h2>
      <% @reviews.each do |review| %>
        <%= render 'public/reviews/review_list', review: review %>
      <% end %>
  <% end %>
</div>
    
