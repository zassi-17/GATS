<div class = "container mt-3">
  <h2>アカウント作成</h2>

  <div class = "row d-flex justify-content-center">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <div class="field mt-4">
    <%= f.label :アイコン画像, class: "col-form-label" %><br>
    <%= f.file_field :image, accept: "image/*", class: "mt-1 " %>
  </div>

  <div class="field">
    <%= f.label :アカウント名, class: "col-form-label mr-4" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介文, class: "col-form-label mr-4" %><br>
    <%= f.text_area :introduction, rows: 3, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス, class: "col-form-label mr-4 pr-4" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :好きなゲームソフトをひとつ挙げてください, class: "col-form-label  mr-4 " %><br>
    <%= f.text_field :favorite_game, class: "form-control " %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: "col-form-label" %>
    <% if @minimum_password_length %>
    <em class= "col-form-label mr-4 pr-2">(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :パスワード（確認用）, class: "col-form-label mr-4 pr-4" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>


  <div class="actions text-center mt-5">
    <%= f.submit "アカウント作成", class: " px-4 mb-2 btn btn-lg btn-primary" %>
  </div>

  <% end %>
  </div>

  <div class="text-center my-5">
    <h5><%= render "public/shared/links" %></h5>
  </div>
  </div>
</div>
